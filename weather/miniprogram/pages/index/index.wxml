<!--index.wxml-->
<!--pages/weatherFunction/weatherFuntion.wxml-->
<wxs src = "../../utils/format.wxs" module = "format"/>
<!--自定义导航栏-->
<navigation title="小猫钓鱼"></navigation>
<view class="bcg">
<!--背景图-->
  <image class='img' src="../../images/nezha.jpg" mode='scaleToFill'></image>
  <view class="content">
<!--实时温度，天气-->
    <view class=" now" style="margin-top: 0rpx;">
      <view class="city">{{city}}</view>
      <view class="update_time">{{format.formatupdatetime(update_time)}}更新</view>
      <view class="temp">{{format.formattem(data[0].tem)}}</view>
      <view class="weather">{{data[0].wea}}</view>
    </view>
<!--未来七天天气-->
    <view class="table">  
      <view class="container">
        <view class="tr" wx:for="{{data}}" wx:key="{{index}}">
        <view class="th">
          <text class="td" decode="{{true}}">{{index==0?"今天":item.week}}\n{{format.formatdate(item.date)}}\n{{format.formattem(item.tem1)}}/{{format.formattem(item.tem2)}}</text>
          </view> 
        </view>
      </view>
    </view>
<!--每三小时天气-->
    <view class="hours">
      <view class="hour" wx:for="{{data[1].hours}}" wx:key="{{index}}">
        <view class="detail">{{item.day}}</view>
        <view class="detail">{{format.formattem(item.tem)}}</view>
        <view class="detail">{{item.wea}}</view>
        <view class="detail">{{item.win}}</view>
        <view class="detail">{{item.win_speed}}</view>
      </view>
    </view>

    <view class="table air">
      <view>空气质量:{{data[0].air_level}}/{{data[0].air}}</view>
      <view>建议:{{data[0].air_tips}}</view>
    </view>

    <view class="table wind">
      <view>{{data[0].win[0]}}转{{data[0].win[1]}}/{{data[0].win_speed}}</view>
      <view wx:if="{{data[0].alarm.length()>0}}">{{data[0].alarm.alarm_type}}/{{data[0].alarm.alarm_level}}预警</view>
      <view>{{data[0].alarm.alarm_content}}</view>
    </view> 
  </view>
</view>


