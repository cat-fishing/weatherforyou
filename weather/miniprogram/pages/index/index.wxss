/* pages/weatherFunction/weatherFunction.wxss */
page{
  /*使图中字体抗锯齿，看起来更清楚、舒服*/
  -webkit-font-smoothing: antialiased;
  background: #f6f6f6;
  color: #fff;
  height:100%;
  width: 100%;
}

.bcg{
  display: flex;
  flex-direction: column;
}

.content{
  position: fixed;
  z-index: 3;
  height:100%;
  width: 100%;
}

.img{
  position: fixed;
  z-index: 2;
  height: 100%;
  width: 100%;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}

.table{
  font-size: 24rpx;
  margin-top: 40rpx;
  width: 100%;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  align-items: center;
  background: rgba(0, 0, 0, .5);
}

.container{
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  float:none;
  width:100%;
  flex-direction:row;
  zoom:1;
  overflow:hidden;
  height: 300rpx;
  display: flex;
  justify-content: center;
  text-align: center;
  align-items: center

}

.tr{
  width: 14.28%;
}

.th{
  line-height: 100rpx;
  border-right: 2rpx solid rgba(250, 250, 250, 0.2);
}


