/**index.wxss**/

/* pages/weatherFunction/weatherFunction.wxss */
page{
  /*使图中字体抗锯齿，看起来更清楚、舒服*/
  -webkit-font-smoothing: antialiased;
  background: #f6f6f6;
  color: #fff;
  height:100%;
  width: 100%;
}
/*页面滚动*/
.bcg{
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  overflow: scroll;
}

.content{
  position: relative;
  z-index: 3;
  height:100%;
  width: 100%;
}

.now{
  display: flex;
  flex-direction: column;
  position: relative;
  width: 100%;

  justify-content: center;
  align-items: center;
}

.city{
  font-size: 35rpx;
  text-align: left;
  padding-left: 40rpx; 
  width: 100%;
}

.temp{
  font-size: 200rpx;
  text-align: center;
  width: 100%;
}

.weather{
  font-size: 30rpx;
  text-align: center;
  width: 100%;
}

.img{
  position: fixed;
  z-index: 2;
  height: 100%;
  width: 100%;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}

.table{
  font-size: 25rpx;
  margin-top: 20rpx;
  width: 100%;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  align-items: center;
  background: rgba(0, 0, 0, .3);
}

.container{
  display: flex;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  float:none;
  width:100%;
  flex-direction:row;
  zoom:1;
  overflow:hidden;
  height: 300rpx;
  justify-content: center;
  text-align: center;
  align-items: center
}

.tr{
  width: 14.28%;
}

.th{
  line-height: 100rpx;
  border-right: 2rpx solid rgba(250, 250, 250, 0.2);
}

.hours{
  padding-left: 10rpx;
}

.air{
  padding-left: 10rpx;
}

.wind{
  padding-left: 10rpx;
}